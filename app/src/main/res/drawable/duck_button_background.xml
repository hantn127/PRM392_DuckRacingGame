<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi bấm vào -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FBC02D"/> <!-- Màu vàng đậm khi bấm -->
            <stroke android:width="3dp" android:color="#F57F17"/>
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FFEB3B"/> <!-- Màu vàng sáng giống màu vịt -->
            <stroke android:width="3dp" android:color="#FBC02D"/>
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>
</selector>
